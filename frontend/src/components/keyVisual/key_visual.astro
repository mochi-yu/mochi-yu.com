---
import SnsIconList from '@components/ui/sns_icon_list.astro';
---

<div id='key_visual'>
  <div id='key_visual_img'>
    <img src='/images/key-image.jpg' />
  </div>
  <div id='key_visual_content'>
    <p class='text-display-large'>もっちー / mochi-yu</p>
    <div class='hr'></div>
    <SnsIconList />
  </div>
</div>
<style>
  /* FIXME */
  #key_visual {
    position: relative;
    width: 100%;
    height: calc(100vw * 0.572);
    min-height: 690px;
  }

  #key_visual_img {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: -10;
    opacity: 0.7;
    overflow: hidden;
  }

  #key_visual_img img {
    position: relative;
    width: 100%;
    top: -40px;
  }

  #key_visual_content {
    display: flex;
    flex-direction: column;
    row-gap: 20px;

    height: 100%;
    align-items: center;
    justify-content: center;
  }

  #key_visual_content .hr {
    width: 300px;
    border-bottom: 3px solid #79747e;
  }

  @media screen and (max-width: 600px) {
    #key_visual {
      height: 150vw;
      min-height: 480px;
    }

    #key_visual_img img {
      object-fit: cover;
      height: 140%;
    }
  }
</style>
